{
  "manifest_version": 3,
  "name": "Wooly",
  "version": "1.0",
  "description": "Rates fabric materials while shopping online",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "fabricDatabase.js",
        "scoreColors.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/excellent.png",
      "48": "icons/excellent.png",
      "128": "icons/excellent.png"
    }
  },
  "icons": {
    "16": "icons/excellent.png",
    "48": "icons/excellent.png",
    "128": "icons/excellent.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/mascot.svg",
        "icons/excellent.png",
        "icons/good.png",
        "icons/medium.png",
        "icons/poor.png"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}