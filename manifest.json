{
  "manifest_version": 3,
  "name": "Fabric Rating - Sustainable Shopping",
  "version": "1.0",
  "description": "Rates clothing materials while shopping online",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "https://www.zara.com/*",
    "https://www.hm.com/*",
    "https://www.uniqlo.com/*",
    "https://www.asos.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.zara.com/*",
        "https://www.hm.com/*",
        "https://www.uniqlo.com/*",
        "https://www.asos.com/*"
      ],
      "js": [
        "fabricDatabase.js",
        "scoreColors.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/mascot.svg"],
      "matches": ["https://*/*"]
    }
  ]
}